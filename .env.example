# Environment Configuration for Sinatra Skeleton

# Application Environment (development, test, production)
#
APP_ENV=development

# Session Security
# Generate a secure secret with: ruby -e "require 'securerandom'; puts SecureRandom.hex(64)"
#
SESSION_SECRET=your_very_long_random_secret_here_at_least_64_characters_long

# Database Configuration
# set DATABASE_HOST to "db" when using the compose.yaml file
#
# DATABASE_URL=postgres://username:password@localhost/database_name
# DATABASE_HOST=db

# Security Settings
# Set to true in production to enforce HTTPS-only cookies
#
# FORCE_SSL=false
